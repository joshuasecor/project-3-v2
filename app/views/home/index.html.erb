    <li data-target="#teacher_carousel" data-slide-to="<%= index + 1 %>" class="<%= index == 0 ? 'active' : ''%>"></li>
  <% end %>
  </ol>
 
  
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox"> 
    <% @trainers.each_with_index do |t, index| %>
