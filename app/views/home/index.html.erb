          <div class="carousel-caption"><%= link_to (t.first_name + ' ' + t.last_name), t %></div>
        </div>
    </div>
  </div>
  <% end %>
  <!-- Controls -->
  <a class="left carousel-control" href="#teacher_carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
