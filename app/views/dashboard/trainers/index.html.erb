<div class='container'>
	<a type="button" class="btn button" href="/dashboard" >&#8592; Back</a><br><br>
	<a type="button" class="btn button" href="#new_trainer_modal" data-toggle="modal">+ Add New Trainer</a> 
	<br><br>

		<div class="trainer_header">
		<h3> TRAINERS</h3>
		<div class="row feature_title">
				<div class="col-md-4">
					<h4>Name</h4>
				</div>
				<div class="col-md-4">
					<h4>Photo</h4>
				</div>
				<div class="col-md-4">
					<h4>Update</h4>
				</div>
		</div>
	</div>


	<div class="trainer_profiles">
			<div class="row">
				<% @trainers.each do |t| %>
				<div class="col-md-4 trainer_name">
						<%= t.full_name %>
				</div>
				<div class="col-md-4 trainer_avatar">
					<%=image_tag t.photo.url(:thumb)%>
				</div>
				<div class="col-md-4 trainer_edit">
					<%= link_to 'Edit', edit_dashboard_trainer_path(t) %>
				</div>
				<% end %>
			</div>
	</div>

</div>


<div class="modal fade" id="new_trainer_modal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">&times;</a>
    <h3>New Trainer</h3>
  </div>
  <div><br>
	  <%= render "layouts/trainer_form" %>
  </div>
</div>