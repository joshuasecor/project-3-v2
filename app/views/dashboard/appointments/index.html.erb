<div class='container'>

	<div>
		<a type="button" class="btn button" href="#new_appointment_modal" data-toggle="modal">ADD NEW APPOINTMENT</a>
	</div>

	<div class="calendar">
		<!-- Render all appointments -->
		<% @appointments.each do |a| %>
			Service: <%= a.service.name %>
			<br><br>
			Date: <%= a.date.strftime("%A") %>
			<br><br>
			Start Time: <%= a.start_time.strftime("%l:%M%P") %>
			<br><br>
			End Time: <%= a.end_time.strftime("%l:%M%P") %>
			<hr>
		<% end %>
	</div>

</div>


<div class="modal fade" id="new_appointment_modal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">&times;</a>
    <h3>New Appointment</h3>
  </div>
  <div>
	  <%= render "layouts/appointment_form" %>
  </div>
</div>