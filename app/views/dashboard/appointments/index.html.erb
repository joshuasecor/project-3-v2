<div class='container'>
	<a type="button" class="btn button" href="/dashboard" >&#8592; Back</a><br><br>
	<a type="button" class="btn button" href="#new_appointment_modal" data-toggle="modal">+ Add New Appointment</a>
	<br><br>

	<div class="calendar">
		<div class="row feature_title">
				<div class="col-md-2">
					<h4>Class</h4>
				</div>
				<div class="col-md-2">
					<h4>Day of Week</h4>
				</div>
				<div class="col-md-2">
					<h4>Time</h4>
				</div>
				<div class="col-md-2">
					<h4>Trainer</h4>
				</div>
				<div class="col-md-4">
					<h4></h4>
				</div>
		</div>

		<div class="services_list">
			<div class="row">
				<% @appointments.order("weekday_id", "start_time").each do |a| %>
				<div class="col-md-2">
					<%= a.service.name %>
				</div>
				<div class="col-md-2">
					<%= a.weekday.name %>
				</div>
				<div class="col-md-2">
					<%= a.start_time.strftime("%l:%M%P") %> - <%= a.end_time.strftime("%l:%M%P") %>
				</div>
				<div class="col-md-2">
					<%= a.trainer.full_name %>
				</div>
				<div class="col-md-4">
					<%= link_to 'Edit', edit_dashboard_appointment_path(a) %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>


<div class="modal fade" id="new_appointment_modal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">&times;</a>
    <h3>New Appointment</h3>
  </div>
  <div><br>
	  <%= render "layouts/appointment_form" %>
  </div>
</div>