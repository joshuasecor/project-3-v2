
<%= form_for find_appointment, :url => { :controller => "/dashboard/appointments", :action => "create" } do |f| %>
	Day: <%= f.collection_select(:weekday_id, Weekday.all, :id, :name, prompt: true) %><br><br>
	Start time: <%= f.time_select :start_time %><br><br>
	End time: <%= f.time_select :end_time %><br><br>
	Service: <%= f.collection_select( :service_id, Service.all, :id, :name, prompt: true ) %><br><br>
	Trainer: <%= f.collection_select( :trainer_id, Trainer.all, :id, :full_name, prompt: true ) %><br><br>
	<%= f.submit "Save", class: "btn btn-primary button" %>
<% end %>